<div class="flex justify-center items-center p-4 md:p-8">
  <div class="w-full md:w-1/2 p-8">

    <h2 class="text-5xl font-bold mb-6">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-2">
        <%= f.label :email %><br />
        <%= f.email_field(:email, autofocus: true, autocomplete: "email", class: "w-full rounded-lg p-2 px-3 !outline-0 ring-black mt-2 ring-gray-400 ring-1 duration-150 focus:ring-emerald-500 !border-0") %>
      </div>

      <div class="actions">
        <%= f.submit("Send me reset password instructions", class: "w-full cursor-pointer text-lg text-white font-semibold p-3 rounded-lg bg-emerald-500 duration-150 hover:bg-emerald-400") %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
