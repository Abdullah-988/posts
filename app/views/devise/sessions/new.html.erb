<div class="flex justify-center items-center p-4 md:p-8">
  <div class="w-full md:w-1/2 p-8">

      <h2 class="text-5xl font-bold mb-6">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field w-full">
          <%= f.label :email %><br />
          <%= f.email_field(:email, autofocus: true, autocomplete: "email", class: "w-full rounded-lg p-2 px-3 !outline-0 ring-black mt-2 ring-gray-400 ring-1 duration-150 focus:ring-emerald-500 !border-0") %>
        </div>

        <div class="field mt-4 w-full">
          <%= f.label :password %><br />
          <%= f.password_field(:password, autocomplete: "current-password", class: "w-full rounded-lg p-2 px-3 !outline-0 ring-black mt-2 ring-gray-400 ring-1 duration-150 focus:ring-emerald-500 !border-0") %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field my-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions mb-2">
          <%= f.submit("Log in", class: "w-full cursor-pointer text-lg text-white font-semibold p-3 rounded-lg bg-emerald-500 duration-150 hover:bg-emerald-400") %>
        </div>
      <% end %>

    <div class="flex justify-between">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
