<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field(:title, class: "w-full rounded-lg p-2 px-3 !outline-0 ring-black mt-2 ring-gray-400 ring-1 duration-150 focus:ring-emerald-500 !border-0") %>
  </div>

  <div class="my-4">
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area(:content, class: "w-full rounded-lg p-2 px-3 !outline-0 ring-black mt-2 ring-gray-400 ring-1 duration-150 focus:ring-emerald-500 !border-0") %>
  </div>

  <%= form.number_field :user_id, value:current_user.id, type: "hidden" %>

  <div>
    <%= form.submit(class: "w-full cursor-pointer text-lg text-white font-semibold p-3 rounded-lg bg-emerald-500 duration-150 hover:bg-emerald-400") %>
  </div>
<% end %>
