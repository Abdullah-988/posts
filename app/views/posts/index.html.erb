<div class="p-4">
<p style="color: green"><%= notice %></p>

<h1 class="font-semibold text-4xl">Posts</h1>

<div id="posts" class="flex flex-col gap-4 my-6">
  <% @posts.each do |post| %>
    <a class="p-4 rounded-lg bg-gray-100" href="/posts/<%= post.id %>">
      <h1 class="text-xl font-medium">
        <%= post.title %>
      </h1>
      </a>
  <% end %>
</div>
    <a class="p-2 px-3 duration-200 bg-emerald-500 font-semibold text-white hover:bg-emerald-400 text-lg rounded-lg" href="<%= new_post_path %>">New post</a>
</div>
