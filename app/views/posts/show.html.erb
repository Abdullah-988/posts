<p style="color: green"><%= notice %></p>

<div class="p-8 w-full md:w-auto">
  <h1 class="text-2xl font-semibold"><%= @post.title %></h1>
  <p class="text-lg mt-2"><%= @post.content %></p>

<% if user_signed_in? %>
  <% if current_user.id == @post.user_id %>
    <div class="flex gap-2 flex-wrap mt-8">
      <%= link_to("Edit this post", edit_post_path(@post), class: "rounded-lg font-medium bg-gray-200 duration-150 hover:bg-gray-300 p-2 px-3") %>
      <%= link_to("Back to posts", posts_path, class: "rounded-lg font-medium bg-gray-200 duration-150 hover:bg-gray-300 p-2 px-3") %>
      <%= button_to("Delete this post", @post, method: :delete, class: "rounded-lg font-medium text-red-500 bg-red-200/50 duration-150 hover:bg-red-300/50 p-2 px-3") %>
    </div>
  <% end %>
<% end %>
</div>
